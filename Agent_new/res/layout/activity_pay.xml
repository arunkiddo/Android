<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
<FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical" >
    
<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="150dp"
    android:background="@drawable/home"
    android:orientation="vertical" >

       <TextView
           android:id="@+id/textView1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="110dp"
           android:layout_marginTop="35dp"
           android:fontFamily="Glyphic Serifs"
           android:textColorHighlight="#000000"
           android:textStyle="bold|italic" 
           android:textColor="#ffffff"
           android:textSize="15sp"
           android:text="How Much ?"
           android:textAppearance="?android:attr/textAppearanceMedium" />

       <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="-0dp"
           android:layout_marginLeft="115dp"
           android:fontFamily="Glyphic Serifs"
           android:text="Mr.Agent"
           android:textAppearance="?android:attr/textAppearanceMedium"
           android:textColor="#ffffff"
           android:textColorHighlight="#000000"
           android:textSize="12sp"
           android:textStyle="italic" />

       <TextView
           android:id="@+id/textView5"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="150dp"
           android:layout_marginTop="10dp"
           android:textStyle="italic" 
           android:textColor="#ffffff"
           android:textSize="12sp"
           android:fontFamily="sans-serif"
           android:text="Customer ID: 25778577873"
           android:textAppearance="?android:attr/textAppearanceSmall" />

           <TextView
               android:id="@+id/textView3"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="-14dp"
               android:fontFamily="sans-serif"
               android:text="Total Amount"
               android:textAppearance="?android:attr/textAppearanceMedium"
               android:textColor="#ffffff"
               android:textColorHighlight="#000000"
               android:textSize="15sp"
               android:textStyle="italic" />

       <TextView
           android:id="@+id/textView4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginBottom="10dp"
           android:layout_marginLeft="40dp"
           android:fontFamily="Glyphic Serifs"
           android:text="20,000"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textSize="15sp" 
           android:textColor="#ffffff"
           android:textColorHighlight="#000000"
           android:textStyle="bold|italic" />d
       
</LinearLayout>

<Button
        android:id="@+id/button2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/menuw" />

<Button
        android:id="@+id/button2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bell" />


<LinearLayout
    android:id="@+id/linearLayout1"
    android:layout_width="270dp"
    android:layout_height="155dp"
    android:layout_above="@+id/linearLayout3"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="130dp"
    android:background="#ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        android:fontFamily="Glyphic Serifs"
        android:textColorHighlight="#000000"
        android:textStyle="bold|italic" 
        android:textColor="#9E9E9E"
        android:text="How To Pay?"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="Glyphic Serifs"
        android:textColorHighlight="#000000"
        android:textStyle="italic" 
        android:textColor="#000000"
        android:textSize="13sp"
        android:text="Name: ABIRAJ" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/circular_edge"
        android:gravity="center_vertical|center_horizontal"
        android:text="Recieving Amount"
        android:textSize="8sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="Glyphic Serifs"
        android:textColorHighlight="#000000"
        android:textStyle="italic" 
        android:textColor="#000000"
        android:drawableLeft="@drawable/credit"
        android:text="CreditCard" />
    
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="-20dp"
        android:fontFamily="Glyphic Serifs"
        android:textColorHighlight="#000000"
        android:textStyle="italic" 
        android:textColor="#000000"
        android:drawableLeft="@drawable/wallet"
        android:text="Cash" />

    
    
</LinearLayout>

<Button
        android:id="@+id/button11"
        android:layout_width="70dp"
        android:layout_height="25dp"
        android:layout_marginLeft="130dp"
        android:background="#558B2F"
        android:layout_marginTop="270dp"
        android:textColor="#ffffff"
        android:textStyle="italic"
        android:textSize="12sp"
        android:gravity="center" 
        android:text="Next Stepâ†’ "/>

</RelativeLayout>

<ListView android:id="@+id/drawer_list"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#111"/>

</android.support.v4.widget.DrawerLayout>